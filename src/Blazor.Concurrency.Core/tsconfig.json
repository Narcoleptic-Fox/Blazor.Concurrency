{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "ES2020",
      "WebWorker",
      "DOM"
    ],
    "outDir": "./wwwroot/js",
    "rootDir": "./assets/ts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "baseUrl": "./assets/ts",
    "paths": {
      "@generated/*": [ "../generated/*" ],
      "@workers/*": [ "../workers/*" ],
      "@core/*": [ "../core/*" ]
    }
  },
  "include": [ "assets/ts/**/*" ],
  "exclude": [ "node_modules", "wwwroot/**/*" ]
}